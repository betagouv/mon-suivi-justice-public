<div class="fr-container fr-py-6w px-12 lg:px-72">
  <h2><%= t('.sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "convicts/shared/error_messages", resource: resource %>

    <%= f.label :phone, class: "fr-label" %>
    <%= f.phone_field :phone, autocomplete: "tel", class: "fr-input mb-6" %>

    <%= f.label :password, class: "fr-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "fr-input mb-4" %>

    <% if devise_mapping.rememberable? %>
      <div class="fr-checkbox-group mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "fr-label" %>
      </div>
    <% end %>

    <%= f.submit t('.sign_in'), class: "fr-btn mb-4" %>
  <% end %>

  <%= render "convicts/shared/links" %>
</div>
