<% if ENV["APP"] == "mon-suivi-justice-public-prod" %>
  <!-- Legacy Matomo (Data gouv) -->
  <script>
    var _paq = window._paq = window._paq || [];
    /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
    _paq.push(["setDocumentTitle", document.domain + "/" + document.title]);
    _paq.push(["setCookieDomain", "*.mon-suivi-justice.beta.gouv.fr"]);
    _paq.push(["setExcludedQueryParams", ["simulationId"]]);
    _paq.push(["disableCookies"]);
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
      var u="https://stats.data.gouv.fr/";
      _paq.push(['setTrackerUrl', u+'matomo.php']);
      _paq.push(['setSiteId', '233']);

      /* Sending data to the new beta gouv matomo instance */
      var secondaryTrackerUrl = 'https://stats.beta.gouv.fr/matomo.php';
      var secondaryWebsiteId = 26;
      _paq.push(['addTracker', secondaryTrackerUrl, secondaryWebsiteId]);

      var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
      g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
    })();
  </script>
  <!-- End Matomo Code -->
<% end %>
