<div class="fr-container fr-py-6w px-12 lg:px-32">
  <div class="bg-white shadow relative mb-8">
    <div class="p-8 lg:p-12">
      <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.organization_title') %></h3>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gray-400 text-white"><%= @cpip.organization_name %></span>
        </div>
        <div class="sm:col-span-2">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.full_name_title') %></h3>
          <p class="text-md font-bold mb-0"><%= @cpip.full_name %></p>
        </div>
        <% if @cpip.phone.present? %>
          <div class="sm:col-span-1">
            <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.phone_title') %></h3>
            <p class="text-md font-bold mb-0"><%= @cpip.phone %></p>
          </div>
        <% end %>
        <% if @cpip.email.present? %>
          <div class="sm:col-span-1">
            <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.email_title') %></h3>
            <p class="text-md font-bold mb-0"><%= @cpip.email %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
