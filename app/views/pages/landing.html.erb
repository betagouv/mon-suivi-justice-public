<h1 class='static-title landing-title fr-pt-4w fr-px-4w'><%= content(:main_title) %></h1>

<div class='static-home-links-wrapper fr-container'>
  <div class='static-home-link-container'>
    <%= link_to preparer_mon_rdv_path, class: 'static-home-link' do %>
      <div class='static-home-link-wrapper'>
        <div class='static-home-link-picto'><%= image_pack_tag 'media/images/home_picto_preparer.svg', class: 'static-home-link-picto-img', alt: "Picto préparer mon rendez-vous" %></div>
        <p class='static-home-link-text'><%= content(:card1_text) %></p>
      </div>
      <div class='static-home-link-button static-home-link-preparer'>
        <p class='static-home-link-button-head'><%= content(:card1_button_head) %></p>
        <p class='static-home-link-button-sub'><%= content(:card1_button_sub) %></p>
      </div>
    <% end %>
  </div>

  <div class='static-home-link-container'>
    <%= link_to comprendre_ma_peine_path, class: 'static-home-link' do %>
      <div class='static-home-link-wrapper static-home-link-wrapper-reverse'>
        <div class='static-home-link-picto'><%= image_pack_tag 'media/images/home_picto_comprendre.svg', class: 'static-home-link-picto-img', alt: "Picto comprendre ma peine" %></div>
        <p class='static-home-link-text'><%= content(:card2_text) %></p>
      </div>
      <div class='static-home-link-button static-home-link-comprendre'>
        <p class='static-home-link-button-head'><%= content(:card2_button_head) %></p>
        <p class='static-home-link-button-sub'><%= content(:card1_button_sub) %></p>
      </div>
    <% end %>
  </div>

  <div class='static-home-link-container'>
    <%= link_to ma_reinsertion_path, class: 'static-home-link' do %>
      <div class='static-home-link-wrapper'>
        <div class='static-home-link-picto'><%= image_pack_tag 'media/images/home_picto_investir.svg', class: 'static-home-link-picto-img', alt: "Picto investir ma réinsertion" %></div>
        <p class='static-home-link-text'><%= content(:card3_text) %></p>
      </div>
      <div class='static-home-link-button static-home-link-investir'>
        <p class='static-home-link-button-head'><%= content(:card3_button_head) %></p>
        <p class='static-home-link-button-sub'><%= content(:card1_button_sub) %></p>
      </div>
    <% end %>
  </div>
</div>

<div class='presentation-wrapper'>
  <div class='presentation-container'>
    <%= image_pack_tag 'media/images/text_message.svg', class: 'presentation-picto', alt: "Picto rappel par sms" %>

    <div class='presentation-text-container'>
      <p class='presentation-text'><%= t('static-home.explanation') %></p>
    </div>
  </div>
</div>
