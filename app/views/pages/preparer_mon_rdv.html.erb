<div class='fr-container static-content-container' data-controller="preparer-mon-rdv" data-preparer-mon-rdv-url-value="/get_all_pages">
  <h1 class='static-title static-title-blue fr-mb-4w'><%=  @toto %><%= content(:main_title) %></h1>
  <div class='static-intro'><%= content.html(:main_rich_description) %></div>

  <h2 class='text-center fr-mt-8w fr-mb-4w'><%= content(:subtitle) %></h2>

  <div class="flex justify-center">
    <div class="fr-select-group">
      <%= select_tag "zip_code_selector", options_for_select(%w[28 49 51 57 68 75 92]), {include_blank: t(".select_a_zip_code"), class: "fr-select fr-mb-4w", data: {target: 'preparer-mon-rdv.zipCode', action: 'change->preparer-mon-rdv#buildCards'}} %>
    </div>
  </div>

  <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters" id="spip_and_sap_cards_container" >
  </div>
</div>

<%# javascript_pack_tag 'preparer_mon_rdv' %>

