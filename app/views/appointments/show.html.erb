<div class="fr-container fr-py-6w px-12 lg:px-32">
  <div class="bg-white shadow relative mb-8">
    <div class="flex justify-center">
      <%= days_from_now_badge(@appointment) %>
    </div>
    <div class="p-8 lg:p-12">
      <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.state_title') %></h3>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold bg-gray-400 text-white"><%= @appointment.state %></span>
        </div>
        <div class="sm:col-span-2">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.appointment_type_title') %></h3>
          <p class="text-md font-bold mb-0"><%= @appointment.appointment_type %></p>
        </div>
        <div class="sm:col-span-1">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.date_title') %></h3>
          <p class="text-md font-bold mb-0"><%= l(@appointment.datetime, format: :clear).capitalize %></p>
        </div>
        <div class="sm:col-span-1">
          <h3 class="text-xs mb-0 font-medium text-msj-blue uppercase mb-1"><%= t('.address_title') %></h3>
          <p class="text-sm font-bold mb-0"><%= @appointment.place_name %></p>
          <% if @appointment.display_address %>
            <p class="text-sm font-bold mb-0"><%= @appointment.place_address %></p>
          <% end %>
          <p class="text-sm font-bold mb-0"><%= @appointment.place_contact %></p>
          <%= link_to t('.map_link'), @appointment.place_map_link, target: "_blank", class: "font-bold text-xs text-msj-blue mt-1" %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex justify-center">
    <%= link_to t('.index_link'), appointments_path %>
  </div>
</div>
